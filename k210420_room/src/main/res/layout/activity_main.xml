<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/btnGetUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询所有用户信息" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加一个用户信息" />

    <Button
        android:id="@+id/btnUpdateUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新用户信息" />

    <Button
        android:id="@+id/btnDeleteUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除一个用户信息" />

    <Button
        android:id="@+id/btnDeleteUserByName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除指定姓名用户信息" />

    <Button
        android:id="@+id/btnGetUserByAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询指定年龄用户信息" />

    <Button
        android:id="@+id/btnAddBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加一本书" />

    <Button
        android:id="@+id/btnQueryAllBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询所有的书" />
</LinearLayout>